<% include ../partials/header %>

<h1>Free Write</h1>
<p>Stream of Consciousness Writing</p>
<form action="/free-writes" method="post">
  <div class="form-group">
    <input class="form-control" type="text" name="freeWrite[title]"
    placeholder="Title" value=<%=time%> required />
  </div>
  <div class="form-group">
    <textarea
      class="form-control"
      name="freeWrite[content]"
      rows="10"
      required
    ></textarea>
    <!-- TODO: Style textarea -->
  </div>
  <div class="form-group">
    <button class="btn btn-lg btn-primary btn-block">
      Submit
    </button>
  </div>
</form>

<% include ../partials/footer %>
