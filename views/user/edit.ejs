<% include ../partials/header %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <h1 style="text-align:center">Edit User</h1>
        <form action="/edit" method="post">
          <div class="form-group">
            <input
              class="form-control"
              type="text"
              name="username"
              value="<%=user.username%>"
            />
          </div>
          <div class="form-group">
            <input
              class="form-control"
              type="text"
              name="user[firstName]"
              value="<%=user.firstName%>"
            />
          </div>
          <div class="form-group">
            <input
              class="form-control"
              type="text"
              name="user[lastName]"
              value="<%=user.lastName%>"
            />
          </div>
          <div class="form-group">
            <input
              class="form-control"
              type="number"
              name="user[age]"
              value="<%=user.age%>"
            />
          </div>
          <div class="form-group">
            <input
              class="form-control"
              type="password"
              name="password"
              placeholder="Re-enter your password"
            />
          </div>
          <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">
              Update
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<% include ../partials/footer %>
