<% include partials/header %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <h1 style="text-align:center">Create User</h1>
        <form action="/register" method="post">
          <div class="form-group">
            <input
              class="form-control"
              type="text"
              name="username"
              placeholder="Username"
            />
          </div>
          <div class="form-group">
            <input
              class="form-control"
              type="text"
              name="user[email]"
              placeholder="your email address"
            />
          </div>
          <div class="form-group">
            <input
              class="form-control"
              type="text"
              name="user[firstName]"
              placeholder="First Name"
            />
          </div>
          <div class="form-group">
            <input
              class="form-control"
              type="text"
              name="user[lastName]"
              placeholder="Last Name"
            />
          </div>
          <div class="form-group">
            <input
              class="form-control"
              type="number"
              name="user[age]"
              placeholder="Age"
            />
          </div>
          <div class="form-group">
            <input
              class="form-control"
              type="password"
              name="password"
              placeholder="Password"
            />
          </div>
          <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">
              Register
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<% include partials/footer %>
